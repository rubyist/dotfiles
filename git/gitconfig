	current = 15 bold
	local = 11
	remote = 9

[color "status"]
	added = 15 bold
	changed = 10 bold
	untracked = 7

[color "diff"]
	meta = 9
	frag = 13
	old = 8
	new = 10 bold

[merge]
	tool = opendiff

